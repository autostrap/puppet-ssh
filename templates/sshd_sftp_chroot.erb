<% @sftp_chroots.each do |username,chrootdir| -%>
Match User <%= username %>
<% if chrootdir -%>
        ChrootDirectory <%= chrootdir %>
<% else -%>
        ChrootDirectory /home/<%= username %>
<% end -%>
        ForceCommand internal-sftp
        X11Forwarding no
        AllowTcpForwarding no
<% end -%>
